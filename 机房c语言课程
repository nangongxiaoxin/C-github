1到100累加和
while语句
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i=1,a=0;
	while(i>=1&&i<=100)
	{
		a=i+a;
		i++;
	}
	printf("%d",a);
	system("pause");
	return 0;
}

1到100奇数和
do-while语句
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i=1,a=0;
	do
	{
		a=i+a;
		i++;
		i=i+1;
	}
	while(i>=1&&i<=100);
	printf("%d",a);
	system("pause");
	return 0;
}

1到n累加和
for语句
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i,n,a=0;
	printf("输入整数n的值:\n");
	scanf_s("%d",&n);
	if(n>=1)
	{
	for(i=1;i<=n;i++)
	{
		a=i+a;
	
	}
	printf("1到%d的累加和为：%d\n",n,a);
	}
	else
	{
	printf("输入错误\n");
	}

	system ("pause");
	return 0;
}


实验六
#include<stdio.h>
#include<stdlib.h>
int main()
{
float a=1,b=2,c,d,sum=0;
int i;
for(i=1;i<=20;i++)
	{
		d=b/a;
		c=b+a;
		a=b;
		b=c;
		sum=sum+d;
	}
	printf("%f\n",sum);

system("pause");
return 0;
}


#include<stdio.h>
#include<stdlib.h>
float pai=3.14;
int main()
{
float a,b,c;
int i;
for(i=1;i<=10;i++)
	{
	a=pai*i*i;
	if(a<200)
		{
		printf("%f\n",a);
		}
	}


system("pause");
return 0;
}



#include<stdio.h>
#include<stdlib.h>
int main()
{
int i,n;
for(i=1;i<=4;i++)
	if(i==2)	
	{
			printf("*************\n");
	}
	else
	{
			printf("#############\n");
	}


system("pause");
return 0;
}


#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i, j;
	for (i = 1; i <= 4; i++)
	{
		for (j = 1; j <= 20; j++)
		{
			if (i == 2)
			{
				printf("*");
			}
			else
			{
				printf("#");
			}
		}
		printf("\n");
	}

	return 0;
	system("pause");
}
