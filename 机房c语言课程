1到100累加和
while语句
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i=1,a=0;
	while(i>=1&&i<=100)
	{
		a=i+a;
		i++;
	}
	printf("%d",a);
	system("pause");
	return 0;
}

1到100奇数和
do-while语句
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i=1,a=0;
	do
	{
		a=i+a;
		i++;
		i=i+1;
	}
	while(i>=1&&i<=100);
	printf("%d",a);
	system("pause");
	return 0;
}

1到n累加和
for语句
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i,n,a=0;
	printf("输入整数n的值:\n");
	scanf_s("%d",&n);
	if(n>=1)
	{
	for(i=1;i<=n;i++)
	{
		a=i+a;
	
	}
	printf("1到%d的累加和为：%d\n",n,a);
	}
	else
	{
	printf("输入错误\n");
	}

	system ("pause");
	return 0;
}


实验六
#include<stdio.h>
#include<stdlib.h>
int main()
{
float a=1,b=2,c,d,sum=0;
int i;
for(i=1;i<=20;i++)
	{
		d=b/a;
		c=b+a;
		a=b;
		b=c;
		sum=sum+d;
	}
	printf("%f\n",sum);

system("pause");
return 0;
}


#include<stdio.h>
#include<stdlib.h>
float pai=3.14;
int main()
{
float a,b,c;
int i;
for(i=1;i<=10;i++)
	{
	a=pai*i*i;
	if(a<200)
		{
		printf("%f\n",a);
		}
	}


system("pause");
return 0;
}



#include<stdio.h>
#include<stdlib.h>
int main()
{
int i,n;
for(i=1;i<=4;i++)
	if(i==2)	
	{
			printf("*************\n");
	}
	else
	{
			printf("#############\n");
	}


system("pause");
return 0;
}


#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i, j;
	for (i = 1; i <= 4; i++)
	{
		for (j = 1; j <= 20; j++)
		{
			if (i == 2)
			{
				printf("*");
			}
			else
			{
				printf("#");
			}
		}
		printf("\n");
	}

	return 0;
	system("pause");
}

实验七 数组1
实验目的：
1、	掌握一维数组的定义、赋值和输入输出的方法。
2、	掌握与数组有关的排序算法。

实验题目：
1、	定义一个有5个元素的整型一维数组，给数组元素赋值后，计算数组元素的平均值并输出。
2、	将一个数组中的值按逆序重新存放。
例如，原来顺序为8，6，5，4，1。要求改为1，4，5，6，8。

3、	有8个数按从大到小的顺序排列。



#include<stdio.h>
#include<stdlib.h>

int main()
{
	double a[4]={5,1,2,3,4};
	double b;
	int i;
	for(i=0;i<5;i++)
	{
		b=a[i]+b;
	}
	printf("%lf",b/4);
	
	system("pause");
	return 0;
	
}





#include<stdio.h>
#include<stdlib.h>

int main()
{
	int a[5]={1,2,3,4,5};
	int b[5]={0};
	int i,j=4;
	for(i=0;i<5;i++)
	{
		
		b[j]=a[i];
		j--;
	
					
	}
	for(i=0;i<5;i++)
	{
	printf("%d",b[i]);
	}
	system("pause");
	return 0;
	
}




#include <stdio.h>
#include <stdlib.h>              //从大到小排序
int main()
{
    int x[8];
    int i,a,b,c;
    for(i=0;i<8;i++)
    {
        scanf("%d",&x[i]);
    }
    printf("\n");
    for(a=0;a<7;a++)
    {
        for(b=0;b<7-a;b++)
        {
            if(x[i]<x[i+1])     //比较
            {
                c=x[i];         //传递
                x[i]=x[i+1];
                x[i+1]=c;
            }
        }
        printf("\n");
        for(i=0;i<8;i++)
        {
            printf(" %d",x[i]);
        }
    }
    
    system("pause");
    return 0;
}
